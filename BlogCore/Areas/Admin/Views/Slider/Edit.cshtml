@model BlogCore.Models.Slider;
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container pt-2">
    <h3>Actualizar datos de Slider</h3>
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="row px-2 mx-2 border">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UrlImage" />
            <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
            <div class="col-10 offset-1 mt-4">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"> </label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" autofocus class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"> </span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="State"> </label>
                    </div>
                    <div class="col-8">
                        <input asp-for="State" class="form-control" />
                        <span asp-validation-for="State" class="text-danger"> </span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label> Imagen  </label>
                    </div>
                    <div class="col-8">
                        <img src="@Model.UrlImage" />
                        <input type="file" name="files" id="subidaArchivos" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4">
                        <partial name="_ViewCreateBack" />
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
