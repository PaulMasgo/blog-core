
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container pt-5">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Lista de Slider Agregados</h2>
        </div>
        <div class="col-6">
            <a asp-action="Create" class="btn btn-danger"><i class="fa fa-plus"></i>Crear nuevo Slider</a>
        </div>
    </div><br /><br />
    <div class="container pt-5">
        <table id="tblSliders" class="table table-striped table-bordered" style="width:100%;">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Nombre</td>
                    <td>Estado</td>
                    <td>Directorio</td>
                    <td>Opciones</td>
                </tr>
            </thead>
        </table>
    </div>

</div>
@section Scripts{
    <script src="~/js/Slider.js"></script>
}


