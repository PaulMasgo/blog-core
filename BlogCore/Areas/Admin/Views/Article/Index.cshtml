@model BlogCore.Models.ViewModel.ArticleVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container pt-5">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Lista de Articulos</h2>
        </div>
        <div class="col-6">
            <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plas"></i>Crear nueva categoria </a>
        </div>
    </div><br /><br />
    <div class="container pt-5">
        <table id="tblArticulos" class="table table-striped table-bordered" style="width:100%;">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Nombre</td>
                    <td>Categoria</td>
                    <td>Fecha Creación</td>
                    <td>Opciones</td>
                </tr>
            </thead>
        </table>
    </div>

</div>
@section Scripts{
    <script src="~/js/Article.js"></script>

}

