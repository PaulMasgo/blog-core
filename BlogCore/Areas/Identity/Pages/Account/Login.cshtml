@page
@model LoginModel

@{
    ViewData["Title"] = "Inicio de Sesión";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2><br />
    <div class="row">
        <div class="col-md-8">
            <section>
                <form id="account" method="post">
                    <h5>Usa una cuenta local para ingresar.</h5>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-block btn-primary">Log in</button>
                    </div>
                    <div class="form-group">
                        <p class="text-center">
                            <a id="forgot-password" asp-page="./ForgotPassword">Olvidaste tu contraseña</a>
                        </p>
                        <p class="text-center">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrate aqui</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
