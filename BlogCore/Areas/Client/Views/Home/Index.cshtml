@model BlogCore.Models.ViewModel.HomeVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Slider -->
<header>
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @{int cont = 0; }
            @foreach (var item in Model.Sliders)
            {
                var DinamicItem = cont++ == 0 ? "item active" : "item";
                <div class="carousel-item @DinamicItem">
                    <img src="@Url.Content(item.UrlImage)" alt="Alternate Text" style="width:100%;height:100%" />
                    <h1 class="text-center text-dark"> @Html.Raw(item.Name) </h1>
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</header>
<!-- Cierra Slider -->

<div class="row fondoTitulo mt-5">
    <div class="col-sm-12 py-5">
        <h1 class="text-center text-white"> Ultimos articulos y novedades </h1>
    </div>
</div>

<!-- Lista de articulos  -->
@if (Model.Articles.Count() > 0)
{
    <hr />
    <div class="row">
        @foreach (var item in Model.Articles)
        {
            <div class="col-4">
                <div class="card">
                    <img src="@item.UrlImage" class="img-thumbnail" width="100%" />
                    <div class="card-body">
                        <h5 class="text-center">@item.Name</h5>
                        <p> Fecha de Creación : @item.CreateDate.ToShortDateString()</p>
                        <a asp-action="Details" class="btn-block btn btn-outline-primary" style="border-radius:2px" asp-route-id="@item.Id"> Detalles</a>
                    </div>
                </div>
            </div>
        }
    </div>
}


